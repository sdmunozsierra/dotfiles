#--[i3 configuration file]--#

# Mod touch
set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Ohsnap 9

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:Ohsnap 9

##############################
###### GAPS AND BORDERS ###### 
##############################

### Borders ###
new_window pixel 1
new_float pixel 1

### Gaps ###
set $default_gaps_inner 7
set $default_gaps_outer 7
gaps inner $default_gaps_inner
gaps outer $default_gaps_outer
smart_gaps on
smart_borders on

# Default layout
workspace_layout default 

##############################
########## PROGRAMS  #########
##############################


# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# default programs
set $browser firefox

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run

# autostart programs
#exec --no-startup-id dropbox start
#exec --no-startup-id compton
#exec --no-startup-id dbus-launch i3
exec	--no-startup-id i3-msg 'workspace Desktop; exec conky -c ~/.config/conky/conkyrc_swag'
exec   	--no-startup-id synapse
exec	--no-startup-id feh --bg-fill ~/Pictures/background/44.jpg

# start programs
bindsym $mod+t 	exec --no-startup-id pcmanfm
bindsym $mod+Ctrl+Delete exec --no-startup-id lxtask
#bindsym $mod+i  exec --no-startup-id i3-msg 'workspace °web; exec firefox'
bindsym $mod+b exec --no-startup-id firefox
#bindsym $mod+p  exec --no-startup-id leafpad
bindsym $mod+Ctrl+k  exec --no-startup-id lxappearance
